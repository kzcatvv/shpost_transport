<%- model_class = Car -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:no) %>:</strong></dt>
  <dd><%= @car.no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:car_number) %>:</strong></dt>
  <dd><%= @car.car_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:car_type) %>:</strong></dt>
  <dd><%= @car.get_car_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_id) %>:</strong></dt>
  <dd><%= @car.team.try :name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:default_driver_id) %>:</strong></dt>
  <dd><%= @car.default_driver.try :name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              cars_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_car_path(@car), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              car_path(@car),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
